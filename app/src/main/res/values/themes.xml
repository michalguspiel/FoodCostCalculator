<resources>
    <!-- Base application theme. -->
    <style name="Theme.FoodCostCalc" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorPrimaryVariant">@color/gray_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="boxStrokeColor">@color/orange_500</item>
        <item name="boxStrokeWidth">2dp</item>

<!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
<!--        <item name="windowActionBar">false</item>-->
        <item name="windowNoTitle">true</item>
        <item name="android:listDivider">@color/gray_500</item>


    </style>

    <!-- Base application theme. -->
    <style name="Theme.OnlineDataActivity" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="boxStrokeColor">@color/orange_500</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">18dp</item>
        <item name="android:height">18dp</item>
    </style>


    <style name="FoodCostCalc.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gray_700</item>

    </style>

    <style name="AppTheme">AppTheme</style>

    <string name="ad_attribution">Ad</string>
</resources>

