<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp"
    android:background="@drawable/recycler_card"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/edit_dish_product_name"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/product_weight_edittext"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:autofillHints=""
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:textSize="16sp"
        tools:ignore="LabelFor" />


    <TextView
        android:id="@+id/unit"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/delete_product_in_dish_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        app:srcCompat="@drawable/ic_baseline_delete_forever_24"
        android:baselineAlignBottom="true"
        android:cropToPadding="true"
        android:layout_gravity="start"
        android:contentDescription="@string/delete_product" />

    </LinearLayout>


